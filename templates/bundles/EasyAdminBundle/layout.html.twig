
{% extends '@!EasyAdmin/layout.html.twig' %}
{% block search_wrapper %}
    {% if app.user.hasTimesheet %}
        <div class="content-search" >
            <span id="timer"> 00:00
            </span>
            <i class="user-avatar-icon-foreground fa fa-play fa-inverse" id="start" style="color:lightgray"></i>
            <i class="user-avatar-icon-foreground fa fa-pause fa-inverse" id="break" style="display:none; color:lightgray"></i>
            <i class="user-avatar-icon-foreground fa fa-stop fa-inverse" id="stop"  style="color:lightgray"></i>
            {% if hasCommentInTime() %}
                <input type="text" id="comment">
                <input type="text" id="relation" >
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
{% block content_top_header %}
    {{ parent() }}
    {% if helpContent is defined and helpContent %}
        <div class="help-button">
            <i class="fas fa-question-circle" id="showHelpButton"></i>
        </div>
    {% endif %}
{% endblock %}
{% block wrapper_wrapper %}
    {{ parent() }}
    {% block new_block %}

        <div class="help-sidebar hidden" id="helpsidebar">
            <a id="closeHelpButton" class="close-button">X</a>
            <!-- Add your new content here -->
                {% if helpContent is defined and helpContent %}
                    {{helpContent.content}}
                {% endif %}
        </div>
    {% endblock %}
{% endblock %}

{% block configured_javascripts %}
    {{ importmap('app') }}
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script type="module" src="/js/holidayAndTime.js"></script>
{% endblock %}